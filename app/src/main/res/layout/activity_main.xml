<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <Button
        android:id="@+id/qr_button"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="@string/qr_button_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="15dp" />


    <ImageButton
        android:id="@+id/search_button"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:onClick="searchButtonClick"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignTop="@id/qr_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:id="@+id/config_button"
        app:srcCompat="@android:src/main/res/drawable/gear_config.png"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@+id/profile_button"
        android:layout_alignRight="@id/search_button"/>

    <Button
        android:id="@+id/profile_button"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:text="@string/profile_button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/qr_button"
        android:layout_marginBottom="55dp"/>

</RelativeLayout>