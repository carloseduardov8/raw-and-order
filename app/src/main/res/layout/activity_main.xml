<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.475"
        android:layout_height="0dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/qr_button"
            android:src="@drawable/qr_code"
            android:scaleType="fitCenter"
            android:padding="35dp"
            android:layout_weight="0.475"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:contentDescription="@string/qr_button_text"/>


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.475"
            android:onClick="searchButtonClick"
            android:padding="25dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_search_category_default"
            android:contentDescription="@string/search_button_text" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_weight="0.05"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.475"
        android:layout_height="0dp"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/config_button"
            android:src="@drawable/config_gear"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_weight="0.475"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/config_button_text" />

        <Space
            android:layout_weight="0.05"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/profile_button"
            android:src="@drawable/profile_button"
            android:scaleType="fitCenter"
            android:layout_weight="0.475"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/profile_button_text" />

    </LinearLayout>
</LinearLayout>